{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom */
    "allowJs": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.d.ts", "vite.config.ts", "custom.d.ts", "src/components/effects/FadeIn.js"],
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"]
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
