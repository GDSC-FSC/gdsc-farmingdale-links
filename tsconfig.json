{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react-jsxdev",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2017",
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["server/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/*",
    "node_modules/vite/types/*"
, "server/**/*", "vite.config.ts", "custom.d.ts", "src/components/effects/FadeIn.js" ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}